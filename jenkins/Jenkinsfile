pipeline {
    agent {
        docker {
            image 'node:8-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        HOME = '.'
        CI = 'true'
        NODE_PATH = './src'
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('ESlint') {
            steps {
                sh 'npm run lint'
            }
        }
        stage('Build') {
            steps {
                sh 'chmod +x ./jenkins/scripts/build.sh'
                sh './jenkins/scripts/build.sh'
            }
        }
    }
}