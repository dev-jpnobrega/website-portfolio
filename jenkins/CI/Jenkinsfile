pipeline {
    agent {
        docker {
            image 'node:8-alpine'
        }
    }
    environment {
        HOME = '.'
        CI = true
        NODE_ENV = 'production'
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('ESlint') {
            steps {
                sh 'npm run lint'
            }
        }
        stage('Test') {
            steps {
                sh 'chmod +x ./jenkins/scripts/test.sh'
                sh '/bin/bash -e ./jenkins/scripts/test.sh'
            }
        }
    }
}